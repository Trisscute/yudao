page {
  height: 100%;
}
.background {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  background-image: linear-gradient(135deg, #FFFFFF 0%, #DDDDDD 100%);
}

.navigator {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom: 1px solid #FFF; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.navigator > .back {
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navigator > .back > image {
  width: 20px;
  height: 20px;
  color: red;
}
.navigator > .title {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 40px;
}
.navigator > .title > text {
  font-size: 16px;
  color: #333;
  font-weight: 300;
}

.container {
  padding: 80px 20px 20px 20px;
}

.box {
}

.avatar {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.avatar > image {
  width: 100px;
  height: 100px;
  border-radius: 100px;
  background-color: #FFF;
}
.avatar > text {
  font-size: 14px;
  color: #333;
  font-weight: 200;
  margin: 10px;
}

.card {
  background-color: #FFF;
  border-radius: 10px;
  box-shadow: 0px 5px 0px -2px #DDD;
  display: flex;
  flex-direction: row;
  padding: 10px;
}

.cell {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.cell-icon {
  width: 50px;
  height: 50px;
  border-radius: 50px;
  background-color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cell-icon > image {
  width: 25px;
  height: 25px;
}
.cell > text {
  font-size: 14px;
  color: #666;
  font-weight: 300;
  /* margin-top: 5px; */
}

.logout {
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.logout-btn {
  width: 200px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40px;
  box-shadow: 0px 5px 10px -5px #ff0844;
  background-image: linear-gradient(135deg, #ffb199 0%, #ff0844 100%);
}
.logout-btn > text {
  color: #FFF;
  font-weight: 200;
  font-size: 16px;
}

button {
  background-color: transparent;
  padding: 0; 
  margin: 0;
  border-radius: 0;
  border: 1px solid #FFF;
}

button::after {
  border: none;
}

