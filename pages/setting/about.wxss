page {
  height: 100%;
}
.background {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  background-image: linear-gradient(135deg, #FFFFFF 0%, #DDDDDD 100%);
}

.navigator {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom: 1px solid #FFF; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.navigator > .back {
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navigator > .back > image {
  width: 20px;
  height: 20px;
  color: red;
}
.navigator > .title {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 40px;
}
.navigator > .title > text {
  font-size: 16px;
  color: #333;
  font-weight: 300;
}

.container {
  padding: 80px 20px 20px 20px;
}

.header {
  display: flex;
  flex-direction: column;
}
.header > image {
  width: 80px;
  height: 80px;
  border-radius: 10px;
}
.header > text {
  margin-top: 10px;
  font-size: 22px;
  color: #333;
  font-weight: 300;
}
.header > .desc {
  font-size: 16px;
  color: #666;
  font-weight: 200;
}

.bottom {
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom > text {
  padding: 10px;
  font-size: 12px;
  color: #999;
  font-weight: 200;
}

.info {
  padding: 10px 0;
}
.cell {
}
.cell > .name {
  font-size: 14px;
  font-weight: 300;
  color: #333;
}
.cell > .content {
  font-size: 14px;
  color: #4284f4;
  font-weight: 200;
}

.separator {
  border-top: 1px solid #DDD;
  margin-top: 10px;
}


