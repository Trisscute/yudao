page {
  height: 100%;
}
.background {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  background-image: linear-gradient(135deg, #FFFFFF 0%, #DDDDDD 100%);
}

.navigator {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom: 1px solid #FFF; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.navigator > .back {
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navigator > .back > image {
  width: 20px;
  height: 20px;
  color: red;
}
.navigator > .title {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 40px;
}
.navigator > .title > text {
  font-size: 16px;
  color: #333;
  font-weight: 300;
}

.container {
  padding: 80px 20px 20px 20px;
}
.box {
  background-color: #FFF;
  border-radius: 10px;
  padding: 10px;
  box-shadow: 0px 5px 0px -2px #DDD;
}
.input-title {
  /* background-color: rgba(255, 255, 255, 0.9); */
  /* margin: 10px;
  padding: 10px; */
  /* border-radius: 10px; */
  /* box-shadow: 0px 5px 10px -5px #999; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px dashed #EEE;
  /* border: 1px solid #EEE; */
}
.input-title > input {
  font-size: 16px;
  width: 100%;
  color: #333;
  padding: 5px 0px;
  font-weight: 300;
}
.input-placeholder {
  font-size: 16px;
  color: #999;
  font-weight: 100;
}

.input-data {
  /* height: 100%; */
  /* background-color: rgba(255, 255, 255, 0.9); */
  /* margin: 10px; */
  /* border-radius: 10px; */
  /* box-shadow: 0px 5px 10px -5px #999; */
  /* border: 1px solid #EEE; */
}
.input-data > textarea {
  padding: 5px 0;
  font-size: 16px;
  color: #333;
  line-height: 20px;
  font-weight: 200;
}
.textarea-placeholder {
  font-size: 16px;
  color: #999;
  font-weight: 100;
}

.toolbox {
  display: flex;
  flex-direction: row;
  margin:20px 0px;
  background-color:#FFF;
  padding:10px 0px;
  border-radius:10px;
  box-shadow:0 5px 0 -2px #DDD;
}
.tool-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}
.tool-icon {
  width: 50px;
  height: 50px;
  background-color: green;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50px;
}
.tool-icon > image {
  widows: 25px;
  height: 25px;
}
.tool-cell > text {
  font-size: 12px;
  color: #666;
  font-weight: 200;
  margin-top: 10px;
}

.submit {
  display: flex;
  align-items: center;
  justify-content: center;
}
.submit-btn {
  width: 200px;
  height: 40px;
  background-image: linear-gradient(135deg, #77BAFA 0%, #4284F4 100%);
  border-radius: 40px;
  box-shadow: 0px 5px 10px -5px #4284F4;
  display: flex;
  align-items: center;
  justify-content: center;
}
.submit-btn > text {
  color: #FFF;
  font-weight: 200;
  font-size: 16px;
}